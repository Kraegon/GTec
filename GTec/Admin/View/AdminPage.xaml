                    <StackPanel Width="85" Grid.Row="0" Grid.Column="2">
                        <Button Tag="{Binding StringRep}" Click="DeleteItemFromEditedRoute_Button_Click" HorizontalAlignment="Right" VerticalAlignment="Top">X</Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

