<Page
    x:Class="GTec.Admin.View.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GTec.Admin.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <!--New location-->
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="350" Background="Gray" Margin="10">
            <Grid Margin="10,50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Width="200" Height="25">Naam:</TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="0" Width="200" Height="25">Longitude:</TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="0" Width="200" Height="25">Latitude:</TextBlock>
                    <TextBlock Grid.Row="3" Grid.Column="0" Width="200" Height="25">Padnaam afbeelding:</TextBlock>
                    <TextBlock Grid.Row="4" Grid.Column="0" Width="200" Height="25">Padnaam geluid:</TextBlock>

                    <TextBox Grid.Row="0" Grid.Column="1" Width="280" Height="25"></TextBox>
                    <TextBox Grid.Row="1" Grid.Column="2" Width="280" Height="25"></TextBox>
                    <TextBox Grid.Row="2" Grid.Column="3" Width="280" Height="25"></TextBox>
                    <TextBox Grid.Row="3" Grid.Column="4" Width="280" Height="25"></TextBox>
                    <TextBox Grid.Row="4" Grid.Column="5" Width="280" Height="25"></TextBox>

                    <Button Grid.Row="5" Grid.Column="1">Toevoegen</Button>
                </Grid>
                
            </StackPanel>

        <!--Choose route-->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="390" Background="Gray" Margin="10,370,10,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Width="200" Height="25">Kies route:</TextBlock>
                <ComboBox Grid.Row="0" Grid.Column="1" Width="280" Height="25"></ComboBox>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Width="200" Height="25">Afbeelding:</TextBlock>
                <Image Grid.Row="1" HorizontalAlignment="Left" Grid.Column="1" Width="80" Height="80"></Image>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Width="200" Height="25">Naam:</TextBlock>
                <TextBlock Grid.Row="3" Grid.Column="0" Width="200" Height="25">Longitude:</TextBlock>
                <TextBlock Grid.Row="4" Grid.Column="0" Width="200" Height="25">Latitude:</TextBlock>
                <TextBlock Grid.Row="5" Grid.Column="0" Width="200" Height="25">Padnaam afbeelding:</TextBlock>
                <TextBlock Grid.Row="6" Grid.Column="0" Width="200" Height="25">Padnaam geluid:</TextBlock>

                <Button Grid.Row="7" Grid.Column="0">Geluid afspelen</Button>
                <Button Grid.Row="7" Grid.Column="1">Toevoegen</Button>
            </Grid>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Width="835" Height="750" Background="Gray" Margin="10,10,10,10">

            <Button></Button>
        </StackPanel>

    </Grid>
</Page>
