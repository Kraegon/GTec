<Page
    x:Class="GTec.User.View.MainPage"
    x:Name="MainWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--Demo: Displaying the usage of the LocationServiceProviderCaller. Comment: This also shows why I'd recommend to use CurrentLocationString.-->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="textBlock" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontSize="45"
                   Text="{Binding ElementName=MainWindow1, Path=Control.LocationProvider.CurrentLocationString, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock x:Name="textBlock1" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="45" Margin="0,65,0,642"
                   Text="{Binding ElementName=MainWindow1, Path=Control.LocationProvider.CurrentLocation.Latitude, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock x:Name="textBlock2" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" FontSize="45" Margin="0,0,0,576"
                   Text="{Binding ElementName=MainWindow1, Path=Control.LocationProvider.CurrentLocation.Longitude, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Page>
